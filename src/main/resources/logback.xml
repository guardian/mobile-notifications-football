<configuration>

    <contextName>mobile-notifications-football</contextName>

    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/mobile-notifications-football.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/mobile-notifications-football.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n%xException{3}</pattern>
        </encoder>
    </appender>

    <appender name="OUTBOUND_HTTP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/outbound-http.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/outbound-http.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n%xException{3}</pattern>
        </encoder>
    </appender>

    <logger name="com.gu.mobile.notifications.football.lib.PaFootballClient" level="DEBUG">
        <appender-ref ref="OUTBOUND_HTTP_LOG"/>
    </logger>


    <root level="INFO">
        <appender-ref ref="LOGFILE"/>
    </root>

</configuration>
